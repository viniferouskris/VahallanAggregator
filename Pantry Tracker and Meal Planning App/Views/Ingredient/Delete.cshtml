
@model IngredientViewModel
@{
    ViewData["Title"] = $"Delete - {Model.Name}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Ingredient</h2>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">Are you sure you want to delete this ingredient?</h4>
                        <p>This action cannot be undone. All associated data will be permanently deleted.</p>
                        @if (Model.IsSystemIngredient)
                        {
                            <hr>
                            <p class="mb-0">
                                <strong>Warning:</strong> This is a system ingredient. Deleting it will affect all users
                                who haven't created their own copy.
                            </p>
                        }
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="card-subtitle mb-3">Basic Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Unit</dt>
                                <dd class="col-sm-8">@Model.Unit</dd>

                                <dt class="col-sm-4">Cost Per Package</dt>
                                <dd class="col-sm-8">@Model.CostPerPackage.ToString("C")</dd>

                                <dt class="col-sm-4">Servings Per Package</dt>
                                <dd class="col-sm-8">@Model.ServingsPerPackage</dd>

                                <dt class="col-sm-4">Cost Per Serving</dt>
                                <dd class="col-sm-8">@((Model.CostPerPackage / Model.ServingsPerPackage).ToString("C"))</dd>

                                <dt class="col-sm-4">Calories Per Serving</dt>
                                <dd class="col-sm-8">@Model.CaloriesPerServing</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="btn-group">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            @if (Model.IsSystemIngredient)
            {
                <div class="card shadow-sm mb-4 border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">System Ingredient Warning</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Warning:</strong> Deleting a system ingredient will affect all users who haven't created
                            their own copy. Consider marking it as deprecated instead of deleting it.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

