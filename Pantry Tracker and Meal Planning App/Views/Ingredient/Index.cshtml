@model IEnumerable<IngredientViewModel>

@{
    ViewData["Title"] = "Ingredients";
    var currentUserId = ViewBag.CurrentUserId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Add New Ingredient
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                            <th>@Html.DisplayNameFor(model => model.Unit)</th>
                            <th>@Html.DisplayNameFor(model => model.CostPerPackage)</th>
                            <th>@Html.DisplayNameFor(model => model.ServingsPerPackage)</th>
                            <th>@Html.DisplayNameFor(model => model.ServingCost)</th>
                            <th>@Html.DisplayNameFor(model => model.CaloriesPerServing)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.MaterialType))
                                    {
                                        <span class="badge badge-secondary">@item.MaterialType</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Vendor))
                                    {
                                        <small class="text-muted">@item.Vendor</small>
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.Unit</td>
                                <td>@item.CostPerPackage.ToString("C")</td>
                                <td>@item.ServingsPerPackage</td>
                                <td>@item.ServingCost.ToString("C")</td>
                                <td>@item.CaloriesPerServing</td>
                                <td>
@*                                     <div class="btn-group">
                                        @if (item.IsSystemIngredient && !User.IsInRole("Admin"))
                                        {
                                            <a asp-action="CopyFromSystem" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-success"
                                               title="Add to My Ingredients">
                                                <i class="bi bi-plus-circle"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center mt-4">
            <p class="lead text-muted">No ingredients available.</p>
            <a asp-action="Create" class="btn btn-primary">Add Your First Ingredient</a>
        </div>
    }
</div>